style.
    .wizards {
        list-style-type: none;
        margin-left: 1em;
        padding: 0;
    }

    .wizards li {
        cursor: pointer;
        position: relative;
        left: 0;
        transition: all 0.2s ease;
    }

    .wizards li:hover {
        color: #369;
        background-color: #EEE;
        left: .2em;
    }

    .selected {
        background-color: #EEE;
        color: #369;
    }

    td {
        vertical-align: top;
    }



div.page-header
    h1 Timing Commander Personality Demo
    h2 {{personality.name}}

    table
        tbody
            tr
                td
                    h3 Wizards
                    ul.wizards
                        | <li *ngFor="#wizard of personality.wizards" (click)="onSelect(wizard)" [class.selected]="wizard === selectedWizard" >
                        |    <span>{{wizard.name}}</span>
                        | </li>
                td
                    h3 Metadata
                    ul
                        |<li *ngFor="#field of personality.dataFields">
                        |   <span>{{field.tostring()}}</span>
                        |</li>

                td
                    h3 Data
                    ul
                        |<li *ngFor="#data of personality.data">
                        |   <span>{{data.tostring()}}</span>
                        |</li>
                td
                    h3 Wizard Screens
                    ul.wizards
                        |<li *ngFor="#screen of personality.wizardScreens" (click)="onSelectScreen(screen)" [class.selected]="screen === selectedWizardScreen">
                        |    <span>{{screen.tostring()}}</span>
                        |</li>


| <wizard-displayer [wizard]="selectedWizard"></wizard-displayer>
| <wizard-screen-debug [wizardScreen]="selectedWizardScreen"></wizard-screen-debug>